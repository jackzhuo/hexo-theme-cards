.language-selector
  position: relative
  display: inline-block

.current-language
  cursor: pointer
  padding: 5px 15px
  border: 0px solid #ccc

.language-dropdown
  position: absolute
  bottom: 100% // 关键：让下拉菜单向上弹出
  left: 0
  background-color: #fff
  border: 1px solid #ccc
  z-index: 10 // 确保在其他元素之上
  display: none // 初始状态隐藏
  max-height: 200px // 设置最大高度，例如 200px
  overflow-y: auto   // 允许垂直滚动

  &.show // Stylus 的嵌套特性
    display: block // 点击时显示

.language-list
  list-style: none
  padding: 0
  margin: 0

.language-item
  padding: 5px 10px

  &.active
    background-color: #eee

  a
    display: block
    text-decoration: none
    color: #333

.lang-icon {
  background-image: url(/assets/lang.svg);
  width: 12px;
  height: 12px;
  display: inline-block;
}    